<header>
  <h1><%= @ride.destination %></h1>

  <ul class="actions">
    <% if policy(@ride).update? %>
      <li><%= link_to "Edit Ride",
                      edit_ride_path(@ride), class: "edit" %></li>
    <% end %>
    <% admins_only do %>
      <li> <%= link_to "Delete Ride",
                       admin_ride_path(@ride),
                       method: :delete,
                       data: {confirm: "Are you sure you want to delete this ride?" },
                       class: "delete" %></li>
    <% end %>
  </ul>
</header>




<h1> A ride for <%= @ride.passengers %> People</h1>
<p> Leaving at <%= @ride.checkout %> to <%= @ride.destination %></p>

<header>
  <h2>Interest</h2>
  <ul class="actions">
    <% if policy(Interest.new(ride: @ride)).create? %>
      <li><%= link_to "New Interest", new_ride_interest_path(@ride),
                      class: "new" %></li>
    <% end %>
  </ul>
</header>

<ul id="interests">
  <% @ride.interests.each do |interest| %>
      <li>
        #<%= interest.id %> -
        <%= link_to interest.name, [@ride, interest] %>
      </li>
  <% end %>
</ul>