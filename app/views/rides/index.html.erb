<% user_logged_in do %>
<header>
<h1>Rides</h1>
    <ul class="actions">
      <li><%= link_to "New Ride", new_ride_path, class: "new" %></li>
    </ul>
</header>

<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <header>
        <h2 style="color: #B00100">My Rides</h2>
      </header>
      <div id="rides">
        <% @my_rides.each do |ride| %>
          <h2><%= link_to ride.destination, ride %></h2>
            <p> Requiring <%= ride.passengers %> and leaving at <%= ride.departure_time.strftime("%I:%M%p") %></p>
        <% end %>
      </div>
    </div>

    <div class="col-sm-offset-6" >
      <header>
        <h2 style="color: #B00100">Available Rides</h2>
      </header>


      <%= simple_form_for(:user) do |f| %>
          <table class="roles">
            <% @all_rides.each do |ride| %>
                <tr>
                  <th><%= label_tag dom_id(ride), 'Ride to ' + ride.destination + ' leaving at ' + ride.departure_time.strftime("%I:%M%p") + ' opt in?' %></th>
                  <td><%= check_box_tag 'ride_id[]', ride.id  %>
                  </td>
                </tr>
            <% end %>
          </table>

          <%= f.button :submit, 'Add Ride',class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
<% end %>